<div calss="info">
  <h2><%= location.name %></h2>

  <div class="content-separator"></div>

  <div class="text"> where: <p><%= location.address %></p></div>

  <div class="content-separator2"></div>

  <audio controls class="text">
    <source src= <%= location.audio %> >
  </audio>

<div class="content-separator2"></div>
  <%# <div class="scroll">

  </div>%>
  <img src=<%= location.text %> style="width:200px;height:200px;" >

<div class="content-separator2"></div>


</div>

<div class="input-field">
  <%# render 'locations/form', location: @location %>
</div>

<video id="video" class="<%= 'hidden' if location.video.blank? %>" controls>
  <% if location.video.present? %>
    <source src="<%= location.video %>" type="video/mp4">
  <% end %>
</video>
